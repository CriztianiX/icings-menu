{
    "name": "icings/menu",
    "type": "cakephp-plugin",
    "description": "A KnpMenu seasoned menu plugin for CakePHP.",
    "keywords": ["cakephp", "menu", "knp-menu"],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Nowak",
            "role": "Author",
            "homepage": "https://nowak-media.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "4.x-dev as 4.0.0",
        "knplabs/knp-menu": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "cakephp/cakephp-codesniffer": "dev-next"
    },
    "autoload": {
        "psr-4": {
            "Icings\\Menu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Icings\\Menu\\Test\\": "tests",
            "Icings\\Menu\\Test\\TestApp\\": "tests/TestApp/src",
            "Knp\\Menu\\Tests\\": "vendor/knplabs/knp-menu/tests/Knp/Menu/Tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs -p ./src ./tests",
        "cs-fix": "phpcbf -p ./src ./tests",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=./clover.xml",
        "stan": [
            "@phpstan-src",
            "@phpstan-tests",
            "@psalm"
        ],
        "stan-setup": "cp composer.json composer.backup && composer require --dev \"phpstan/phpstan-shim:^0.11\" \"psalm/phar:^3.4\" && mv composer.backup composer.json",
        "phpstan-src": "phpstan analyse -l 7 -c ./phpstan.src.neon ./src",
        "phpstan-tests": "phpstan analyse -l 7 -c ./phpstan.tests.neon ./tests",
        "psalm": "php ./vendor/psalm/phar/psalm.phar --show-info=false"
    }
}
